{% extends 'base.html.twig' %}

{% block title %}Day Calendar Display{% endblock %}

{% block content %}

    <div class="content_profil">
        <div class="nav_profil">
            <div class="nav_profil_flex">
                <i class="fas fa-hamburger"></i>
                <div>
                    <p>{{ app.user.username }}</p>
                    <span>{{app.user.role.name }}</span>
                </div>

            </div>
        </div>
                <div class="profil_classe">
                        <table>
                        <caption>{{ my_classroom.name }}<br>
                        <a href="{{ path('canteen_day') }}?date_of_day={{ date_of_yesterday }}" class="btn btn-primary">&lt;</a>
                        {{ date_of_day }}
                        <a href="{{ path('canteen_day') }}?date_of_day={{ date_of_tomorrow }}" class="btn btn-primary">&gt;</a></caption>
                        <thead>
                            <tr>
                                <td>Nom élève</td>
                                <td>Présence</td>
                                <td>Repas</td>
                            </tr>
                        </thead>
                        <tbody>
                            {% for student in students %}
                            <tr>
                                <td>{{ student.name }} {{ student.firstname }}</td>
                                <td>
                                    <input type="checkbox" id="toggle_switch" name="present" checked>
                                </td>
                                <td>
                                    <input type="checkbox" id="toggle_switch" name="lunch" checked>
                                </td>
                            </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>

{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}O'Tableau{% endblock %}

{% block content %}

    <div class="backend_school_show">
    <a href="{{ path('admin_default_index') }}"><i class="fas fa-angle-left"></i></a>
        {% for school in school %}
            <div>                
                 <div class="show_school">
                <h1>{{school.name}}</h1> 
                 <div>
                <p>{{school.address}}</p>
                <p>{{school.phone}}</p>
                <p>{{school.email}}</p>
                 </div>
                   </div>

                    <form method="post" action="{{ path('admin_school_edit', {'id': school.id}) }}">
        <input type="hidden" name="_method" value="UPDATE">
        <input type="hidden" name="_token" value="{{ csrf_token('update' ~ school.id) }}">
        <button class="btn">Modifier</button>
    </form>
            </div>
        {% endfor %}    
    </div>

{% endblock %}
{% block footer %}
{% endblock %}
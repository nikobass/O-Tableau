{% extends 'base.html.twig' %}

{% block title %}O'Tableau{% endblock %}

{% block content %}

    <div class="backend_person">
        <a href="{{ path('admin_default_index') }}"><i class="fas fa-angle-left"></i></a>
        <div class="add_person">
            <h1>Les classes</h1>
        </div>
        <div class="show_button_create">
            <a href="{{ path('admin_classroom_new') }}">Cr√©er</a>
        </div>
        <div class="list_class">
            {% for classroom in classrooms %}
                <div class="show_delete_update">
                    <p>{{classroom.name}}</p>
                    <div class="show_delete_update_flex">
                        <form method="post" action="{{ path('admin_classroom_edit', {'id': classroom.id}) }}">
                            <input type="hidden" name="_method" value="UPDATE">
                            <input type="hidden" name="_token" value="{{ csrf_token('update' ~ classroom.id) }}">
                            <button class>Modifier</button>
                        </form>

                        <form method="post" action="{{ path('admin_classroom_delete', {'id': classroom.id}) }}">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ classroom.id) }}">
                            <button class>Supprimer</button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div> 
    </div>

{% endblock %}
{% block footer %}{% endblock %}